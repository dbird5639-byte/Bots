# Claude Code Trading Bots Configuration

# Bot Configuration
bot:
  name: "Claude Code Trading Bot"
  version: "2.0.0"
  environment: "development"  # development, staging, production
  debug: true
  log_level: "INFO"

# AI Model Configuration
ai:
  # Claude API Configuration
  claude:
    api_key: "${CLAUDE_API_KEY}"
    model: "claude-3-sonnet-20240229"
    max_tokens: 4000
    temperature: 0.1
    timeout: 60
  
  # OpenAI Configuration (backup/alternative)
  openai:
    api_key: "${OPENAI_API_KEY}"
    model: "gpt-4"
    max_tokens: 4000
    temperature: 0.1
  
  # LangChain Configuration
  langchain:
    memory_type: "conversation_buffer"
    max_memory_size: 1000
    return_intermediate_steps: true

# Trading Configuration
trading:
  # Exchange Settings
  exchange:
    name: "binance"  # binance, coinbase, kraken, etc.
    api_key: "${EXCHANGE_API_KEY}"
    secret: "${EXCHANGE_SECRET}"
    sandbox: true  # Use testnet/sandbox for development
  
  # Trading Pairs
  pairs:
    - "BTC/USDT"
    - "ETH/USDT"
    - "SOL/USDT"
    - "ADA/USDT"
  
  # Position Sizing
  position_sizing:
    max_position_size: 0.1  # 10% of portfolio
    min_position_size: 0.01  # 1% of portfolio
    risk_per_trade: 0.02  # 2% risk per trade
  
  # Risk Management
  risk_management:
    max_drawdown: 0.15  # 15% maximum drawdown
    stop_loss: 0.05  # 5% stop loss
    take_profit: 0.15  # 15% take profit
    max_open_positions: 5

# Strategy Generation
strategy_generation:
  # AI Strategy Creation
  ai_strategies:
    enabled: true
    max_strategies: 10
    strategy_complexity: "medium"  # simple, medium, complex
    backtest_period: "1y"  # 1m, 3m, 6m, 1y, 2y
  
  # Strategy Types
  strategy_types:
    - "mean_reversion"
    - "momentum"
    - "arbitrage"
    - "statistical"
    - "ai_enhanced"
  
  # Optimization
  optimization:
    enabled: true
    optimization_method: "optuna"  # optuna, hyperopt, grid_search
    max_trials: 100
    optimization_metric: "sharpe_ratio"  # sharpe_ratio, max_drawdown, total_return

# Data Configuration
data:
  # Data Sources
  sources:
    - "exchange"
    - "yfinance"
    - "alpha_vantage"
    - "polygon"
  
  # Data Types
  types:
    - "price"
    - "volume"
    - "orderbook"
    - "trades"
    - "news"
    - "sentiment"
  
  # Timeframes
  timeframes:
    - "1m"
    - "5m"
    - "15m"
    - "1h"
    - "4h"
    - "1d"
  
  # Historical Data
  historical:
    max_days: 365
    update_frequency: "1h"

# Performance Monitoring
monitoring:
  # Metrics
  metrics:
    - "total_return"
    - "sharpe_ratio"
    - "max_drawdown"
    - "win_rate"
    - "profit_factor"
    - "calmar_ratio"
  
  # Alerts
  alerts:
    email: "${ALERT_EMAIL}"
    telegram: "${TELEGRAM_BOT_TOKEN}"
    slack: "${SLACK_WEBHOOK}"
  
  # Dashboard
  dashboard:
    enabled: true
    port: 8080
    refresh_rate: 30  # seconds

# Database Configuration
database:
  # PostgreSQL
  postgresql:
    host: "localhost"
    port: 5432
    database: "claude_trading_bot"
    username: "${DB_USERNAME}"
    password: "${DB_PASSWORD}"
  
  # Redis
  redis:
    host: "localhost"
    port: 6379
    password: "${REDIS_PASSWORD}"
    database: 0
  
  # SQLite (development)
  sqlite:
    path: "data/trading_bot.db"

# Logging Configuration
logging:
  level: "INFO"
  format: "{time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} | {message}"
  file: "logs/claude_trading_bot.log"
  max_size: "100 MB"
  rotation: "1 day"
  retention: "30 days"

# API Configuration
api:
  host: "0.0.0.0"
  port: 8000
  cors_origins: ["*"]
  rate_limit: 100  # requests per minute
  authentication: true

# Development Settings
development:
  hot_reload: true
  auto_restart: true
  mock_trading: true
  paper_trading: true
  backtest_mode: true
